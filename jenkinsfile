pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
                sh 'env'
               sh  'GIT_PREVIOUS_COMMIT=$(git rev-parse --short "HEAD^")'
               sh 'GIT_COMMIT=$(git rev-parse --short HEAD)'
              sh 'CHANGED=$(git diff --name-only $GIT_PREVIOUS_COMMIT $GIT_COMMIT ui)'

if(-z $CHANGED) {
    echo “no changes”
} 
else {
   echo “changed”
}
            }
        }
    }
}
